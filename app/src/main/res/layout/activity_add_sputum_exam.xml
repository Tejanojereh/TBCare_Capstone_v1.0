<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"



    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    android:orientation="vertical">


    <include
        android:id="@+id/toolbar1"
        layout="@layout/normalbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_TBCase"
                android:layout_width="189dp"
                android:layout_height="52dp"
                android:layout_marginTop="50dp"

                android:layout_marginLeft="-29dp"
                android:text="TB Case No."
                android:textAlignment="textEnd"
                android:textColor="@color/darkgray"
                android:textSize="22sp" />

            <Spinner
                android:id="@+id/SpinnerPatient"
                android:layout_width="222dp"
                android:layout_height="87dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="421dp"
            android:layout_height="136dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView10"
                android:layout_width="222dp"
                android:layout_height="51dp"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="44dp"
                android:layout_marginRight="10dp"
                android:text="Visual Appearance:"
                android:textAlignment="textEnd"
                android:textColor="@color/darkgray"
                android:textSize="22sp" />

            <Spinner
                android:id="@+id/SpinnerVisualAppearance"
                android:layout_width="137dp"
                android:layout_height="87dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="165dp"
                android:layout_height="32dp"
                android:layout_marginLeft="-40dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="10dp"
                android:text="Reading:"
                android:textAlignment="textEnd"
                android:textColor="@color/darkgray"
                android:textSize="22sp" />

            <Spinner
                android:id="@+id/SpinnerReading"
                android:layout_width="111dp"
                android:layout_height="23dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="165dp"
                android:layout_height="61dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="40dp"
                android:text="Diagnosis:"
                android:textAlignment="textEnd"
                android:textColor="@color/darkgray"
                android:textSize="22sp" />

            <Spinner
                android:id="@+id/SpinnerDiagnosis"
                android:layout_width="115dp"
                android:layout_height="23dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="42dp" />

        </LinearLayout>




    </LinearLayout>

    <Button
        android:id="@+id/BtnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="28dp"
        android:text="SUBMIT" />
</LinearLayout>