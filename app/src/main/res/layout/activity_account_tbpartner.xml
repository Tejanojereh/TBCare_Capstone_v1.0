<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0B0A">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        app:srcCompat="@drawable/account_title" />

    <TextView
        android:id="@+id/a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="145dp"
        android:text="First Name:"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/firstname"
        android:layout_width="181dp"
        android:layout_height="33dp"
        android:layout_alignTop="@+id/a1"
        android:layout_toEndOf="@+id/con"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/a1"
        android:layout_marginTop="189dp"
        android:textColor="@android:color/background_light"
        android:text="Middle Name:" />

    <TextView
        android:id="@+id/middlename"
        android:layout_width="181dp"
        android:layout_height="33dp"
        android:layout_alignStart="@+id/firstname"
        android:layout_alignTop="@+id/textView5"
        android:ems="10"
        android:textColor="@android:color/background_light"

        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/a1"
        android:layout_marginTop="228dp"
        android:textColor="@android:color/background_light"
        android:text="Last Name:" />

    <TextView
        android:id="@+id/lastname"
        android:layout_width="181dp"
        android:layout_height="33dp"

        android:layout_alignStart="@+id/firstname"
        android:layout_alignTop="@+id/textView6"
        android:ems="10"
        android:textColor="@android:color/background_light"

       />

    <TextView
        android:id="@+id/con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/a1"
        android:layout_marginBottom="217dp"
        android:textColor="@android:color/background_light"
        android:text="Contact Number:" />

    <TextView
        android:id="@+id/contactnumber"
        android:layout_width="181dp"
        android:layout_height="33dp"
        android:layout_alignStart="@+id/firstname"
        android:layout_alignTop="@+id/con"
        android:ems="10"

        android:textColor="@android:color/background_light"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/a1"
        android:layout_marginBottom="149dp"
        android:textColor="@android:color/background_light"
        android:text="Username:" />

    <TextView
        android:id="@+id/username"
        android:layout_width="181dp"
        android:layout_height="33dp"
        android:layout_alignStart="@+id/firstname"
        android:layout_alignTop="@+id/textView8"
        android:ems="10"
        android:textColor="@android:color/background_light"
        />


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/a1"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/btn_back" />



</RelativeLayout>