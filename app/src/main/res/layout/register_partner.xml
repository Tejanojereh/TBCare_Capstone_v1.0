<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    android:fitsSystemWindows="true"

    android:orientation="vertical">

    <!--RWGISTER PARTNER-->

    <include
        android:id="@+id/toolbar1"
        layout="@layout/menu_login"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="179dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_Tup"
        app:layout_constraintVertical_bias="0.054" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline_Tup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="56dp"
        app:layout_constraintGuide_percent="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2_Tdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="659dp"
        app:layout_constraintGuide_percent="0.095" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline6_Sup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.500684"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4_Sl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07055961" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5_Sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="29dp" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="330dp"
        android:layout_height="545dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="73dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline5_Sr"
        app:layout_constraintStart_toStartOf="@+id/guideline4_Sl"
        app:layout_constraintTop_toTopOf="@+id/guideline2_Tdown">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:padding="16dp">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="14dp" />

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_nameF"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/user"
                        android:hint="First Name"
                        android:inputType="text"
                        android:padding="16dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_nameM"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/user"
                        android:hint="Middle Name"
                        android:inputType="text"
                        android:padding="16dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_nameL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/user"
                        android:hint="Last Name"
                        android:inputType="text"
                        android:padding="16dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/email"
                        android:hint="@string/email"
                        android:inputType="text"
                        android:padding="16dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/username"
                        android:hint="@string/username"
                        android:inputType="text"
                        android:padding="16dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_contactnum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/contact"
                        android:hint="@string/contactnum"
                        android:inputType="number"
                        android:padding="16dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_idpartnerr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/id"
                        android:hint="@string/idpartner"
                        android:inputType="text"
                        android:padding="16dp"
                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/lock"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:padding="16dp"

                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_confirmpassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/lock"
                        android:hint="@string/confirmpass"
                        android:inputType="textPassword"
                        android:padding="16dp"

                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>


                <Spinner
                    android:id="@+id/spinner2"
                    style="?android:attr/spinnerItemStyle"
                    android:layout_width="387dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:dropDownWidth="fill_parent"
                    android:ellipsize="marquee"
                    android:singleLine="false"

                    android:spinnerMode="dropdown" />

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_secquestion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/sec"
                        android:hint="@string/securityquestionans"
                        android:inputType="text"
                        android:padding="16dp"

                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/spinnersec2"
                    style="?android:attr/spinnerItemStyle"
                    android:layout_width="387dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:dropDownWidth="fill_parent"
                    android:ellipsize="marquee"
                    android:singleLine="false"

                    android:spinnerMode="dropdown" />

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_secquestion2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"

                        android:background="@drawable/bg_overlay"
                        android:backgroundTint="@color/colorWhite"
                        android:drawableLeft="@drawable/sec"
                        android:hint="@string/securityquestionans2"
                        android:inputType="text"
                        android:padding="16dp"

                        android:textColor="#FFFFFF"
                        android:textCursorDrawable="@drawable/ic_cursorset"
                        android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/btnregister"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="30dp"


                    android:background="@drawable/btn_rounded"
                    android:fontFamily="@font/roboto"

                    android:text="Register" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="48dp" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>