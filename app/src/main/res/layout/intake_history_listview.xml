<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!--DEVICE OUTPUT SPUTUM RESULTS_LIST VIEW FORMAT-->

    <LinearLayout
        android:id="@+id/linearLayoutID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/normalbar"
        android:padding="16dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbldatetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Date and Time"
            android:textColor="@color/darkgray"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtdatetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08:00 AM"
            android:textColor="@color/color1"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15sp"/>


        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblAction"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_margin="5dp"
                android:text="Action:"
                android:textColor="@color/darkgray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAction"
                android:layout_width="143dp"
                android:layout_height="41dp"
                android:layout_margin="5dp"
                android:text="Yes"
                android:textColor="@color/color1"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblMedicine"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_margin="5dp"
                android:text="Medicine:"
                android:textColor="@color/darkgray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMedicineName"
                android:layout_width="143dp"
                android:layout_height="41dp"
                android:layout_margin="5dp"
                android:text="Quadmax"
                android:textColor="@color/color1"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>